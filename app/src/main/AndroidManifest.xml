<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ym.yourmeal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/favicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".EmployeeActivity"
            android:label="@string/title_activity_employee" />
        <activity
            android:name=".MealActivity"
            android:label="@string/title_activity_meal" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile" />
        <activity
            android:name=".ReservationActivity"
            android:label="@string/title_activity_reservation" />
        <activity
            android:name=".NoReservationActivity"
            android:label="@string/title_activity_no_reservation" />
        <activity
            android:name=".PopupInfo"
            android:theme="@style/AppTheme.Custom" />
        <activity
            android:name=".PopupCheckReservation"
            android:theme="@style/AppTheme.Custom" />
        <activity
            android:name=".CancelReservationPopup"
            android:theme="@style/AppTheme.Custom" />
        <activity android:name=".MeatListActivity" />
        <activity android:name=".FishListActivity" />
        <activity android:name=".VeganListActivity"></activity>
    </application>

</manifest>